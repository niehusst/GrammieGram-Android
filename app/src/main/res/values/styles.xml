<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/birdRed</item>
        <item name="colorPrimaryDark">@color/grammiegramRed</item>
        <item name="colorAccent">@color/grey</item>
    </style>

    <!-- theme containing the default action bar -->
    <style name="AppThemeDefaultActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Error Text. -->
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Link Text. -->
    <style name="LinkText" parent="TextAppearance.AppCompat">
        <item name="android:textColorLink">#3595E2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- auto generated for fragment layouts -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
